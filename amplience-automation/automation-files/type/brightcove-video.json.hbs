{
    "contentTypeUri": "https://sfcc.com/components/brightcove",
    "status": "ACTIVE",
    "settings": {
        "label": "Brightcove",
        "icons": [
            {
                "size": 256,
                "url": "https://dem.a.bigcontent.io/v1/static/AnyaFinn-CTicon-BrightcoveVideo"
            }
        ],
        "visualizations": [
            {{#each visualisations}}
            {
                "label": "{{this.name}}",
                "templatedUri": "{{this.url}}/\{{locales}}/visualization?vse=\{{vse.domain}}&contentId=\{{content.sys.id}}&hub=\{{hub.name}}",
                "default": "{{this.default}}"
            },
            {{/each}}
            {
                "label": "JSON",
                "templatedUri": "https://delivery-preview.visualizations.content.amplience.net?id=\{{content.sys.id}}&vse=\{{vse.domain}}&locale=\{{locales}}&hub=\{{cms.hub}}&realtime=true",
                "default": false
            }
        ]
    },
    "repositories": [
        "content"
    ]
}
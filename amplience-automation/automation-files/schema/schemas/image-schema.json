{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://sfcc.com/components/image",
    "title": "Image",
    "description": "An image with POI and suitable for in grid content",
    "allOf": [
        {
            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
        }
    ],
    "type": "object",
    "properties": {
        "image": {
            "type": "object",
            "title": "Image",
            "description": "Image to show in the snippet",
            "allOf": [
                {
                    "$ref": "https://sfcc.com/libs/all-definitions#/definitions/diImage"
                }
            ]
        },
        "links": {
            "type": "array",
            "title": "Links",
            "description": "Links for the card",
            "items": {
                "$ref": "https://sfcc.com/components/link"
            },
            "minItems": 0,
            "maxItems": 4
        }
    },
    "propertyOrder": [
        "image"
    ]
}
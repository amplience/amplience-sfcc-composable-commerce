{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://sfcc.com/staticpage",

	"title": "Title",
	"description": "Description",

	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	
	"type": "object",
	"properties": {
		"_meta": {
            "title": "",
            "properties": {
                "deliveryKey": { 
                    "title": "Key",
                    "type": "string"
                }
            }
        },
		"pagetitle": {
			"title": "Title",
			"description": "",
			"allOf": [
				{ "$ref": "http://bigcontent.io/cms/schema/v1/localization#/definitions/localized-string" }
			]
		},
		"seo": {
			"allOf": [
				{ "$ref": "https://sfcc.com/seo#/definitions/seo"}
			]
		},
		"content": {
			"title": "Content",
			"type": "array",
			"minItems": 0,
			"maxItems": 10,
			"items": {
				"title": "Page Content",
				"allOf": [
					{ "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link" },
					{
						"properties": {
							"contentType": {
								"enum": [
									"http://sfcc.com/hero",
									"http://sfcc.com/section"
								]
							}
						}
					}
				]
			}
		}
	}
}
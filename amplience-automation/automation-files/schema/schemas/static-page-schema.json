{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://sfcc.com/staticpage",

	"title": "Title",
	"description": "Description",

	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],

	"type": "object",
	"properties": {
		"_meta": {
			"title": "",
			"properties": {
				"deliveryKey": {
					"title": "Key",
					"type": "string"
				}
			}
		},
		"seo": {
			"allOf": [{"$ref": "https://sfcc.com/seo#/definitions/localized-seo"}]
		},
		"content": {
			"title": "Content",
			"type": "array",
			"minItems": 0,
			"maxItems": 10,
			"items": {
				"title": "Page Content",
				"allOf": [
					{"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"},
					{
						"properties": {
							"contentType": {
								"enum": ["https://sfcc.com/hero", "https://sfcc.com/section"]
							}
						}
					}
				]
			}
		}
	}
}
